{
  "name": "restaurant",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest --run",
    "test:watch": "jest --watch",
    "test:e2e": "jest __tests__/e2e --run",
    "deploy:check": "node scripts/deploy-check.js",
    "production:setup": "node scripts/production-setup.js",
    "create-admin": "node scripts/create-admin-user.js",
    "update-user-role": "node scripts/update-user-role.js",
    "create-sample-data": "node scripts/create-sample-data.js",
    "analyze": "ANALYZE=true npm run build",
    "db:seed": "node scripts/seed-database.js",
    "db:migrate": "node scripts/migrate-database.js",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "performance:test": "npm run build && npm run start & sleep 10 && npm run health:check && pkill -f 'next start'",
    "cache:clear": "rm -rf .next/cache",
    "logs:view": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/err.log",
    "security:audit": "npm audit --audit-level=high",
    "bundle:analyze": "npm run analyze && open .next/analyze/client.html"
  },
